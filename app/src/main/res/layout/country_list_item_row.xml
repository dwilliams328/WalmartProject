<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/country_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/countryAndRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder, Region"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/country_list_item"
        app:layout_constraintLeft_toLeftOf="@+id/country_list_item"
        />

    <TextView
        android:id="@+id/countryCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/country_list_item"
        app:layout_constraintRight_toRightOf="@+id/country_list_item"
        />

    <TextView
        android:id="@+id/capital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/countryAndRegion"
        app:layout_constraintLeft_toLeftOf="@+id/country_list_item"
        app:layout_constraintBottom_toBottomOf="@+id/country_list_item"
        />



</androidx.constraintlayout.widget.ConstraintLayout>